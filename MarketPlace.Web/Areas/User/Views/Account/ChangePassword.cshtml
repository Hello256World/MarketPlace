@model MarketPlace.DataLayer.DTOs.Account.ChangePasswordDTO
@{
    ViewData["Title"] = "تغییر رمز عبور";
}
@section scripts{
    	<partial name="_ValidationScriptsPartial"/>
	<partial name="_CaptchaScripts"/>
}

<div class="breadcrumbs_area">
		<div class="container">
			<div class="row">
				<div class="col-12">
					<div class="breadcrumb_content">
						<ul>
							<li><a href="/">خانه</a></li>
							<li>@ViewData["Title"]</li>
						</ul>
					</div>
				</div>
			</div>
		</div>
	</div>

<section class="main_content_area">
		<div class="container">
			<div class="account_dashboard">
				<div class="row">
					<div class="col-sm-12 col-md-3 col-lg-3">
						<!-- Nav tabs -->
						@await Component.InvokeAsync("UserSidebar")
					</div>
					<div class="col-sm-12 col-md-9 col-lg-9">
						<!-- Tab panes -->
						<div class="tab-content dashboard_content">
							<div class="tab-pane fade active show" id="account-details">
								<h3>@ViewData["Title"]</h3>
								<div class="login">
									<div class="login_form_container">
										<div class="account_login_form">
											<form asp-area="User" asp-controller="Account" asp-action="ChangePassword" method="post">
												<partial name="_CaptchaInput"/>
												<label>رمز عبور فعلی</label>
												<input type="password" asp-for="CurrentPassword">
												<span asp-validation-for="CurrentPassword" class="text-danger"></span>
												<br />
												<label>رمز عبور جدید</label>
												<input type="password" asp-for="NewPassword">
												<span asp-validation-for="NewPassword" class="text-danger"></span>
												<br />
												<label>تکرار رمز عبور جدید</label>
												<input type="password" asp-for="ConfirmNewPassword">
												<span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
												<br>
												<div class="save_button primary_btn default_button">
													<button type="submit">ذخیره</button>
												</div>
											</form>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>

