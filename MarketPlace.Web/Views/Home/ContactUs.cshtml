	<div class="contact_area">
		<div class="container">
			<div class="row">
				<div class="col-lg-6 col-md-12">
					<div class="contact_message content">
					@if(siteSetting != null)
					{
						<h3>تماس با ما</h3>
						<p>
							@siteSetting.AboutUs
						</p>
						<ul>
							<li><i class="fa fa-fw fa-map-marker"></i>@siteSetting.Address</li>
							<li><i class="fa fa-fw fa-phone"></i>
								@if(!String.IsNullOrEmpty(siteSetting.Mobile))
								{
									@foreach(var mobile in siteSetting.Mobile.Split("-"))
									{
										<span class="ltr-text">@mobile</span><text> , </text>
									}
								}
								</li>
							<li><i class="fa fa-fw fa-envelope-o"></i> <a href="#">@siteSetting.Email</a></li>
						</ul>
					}
				</div>
				</div>
				<div class="col-lg-6 col-md-12">
					<div class="contact_message form">
						<h3>با ما در میان بگذارید</h3>
						<form method="POST" asp-controller="Home" asp-action="ContactUs">
							<partial name="_CaptchaInput"/>
							<p>
								<label> نام شما (الزامی)</label>
								<input placeholder="نام *" type="text" asp-for="FullName">
								<span class="text-danger" asp-validation-for="FullName"></span>
							</p>
							<p>
								<label> ایمیل شما (الزامی)</label>
								<input placeholder="* ایمیل" type="email" dir="ltr" asp-for="Email">
								<span class="text-danger" asp-validation-for="Email"></span>
							</p>
							<p>
								<label> موضوع</label>
								<input placeholder="موضوع" type="text" asp-for="Subject">
								<span class="text-danger" asp-validation-for="Subject"></span>
							</p>
							<div class="contact_textarea">
								<label> پیام شما</label>
								<textarea placeholder="پیام *" class="form-control2" asp-for="Text"></textarea>
								<span class="text-danger" asp-validation-for="Text"></span>
							</div>
							<button type="submit"> ارسال</button>
						</form>

					</div>
				</div>
			</div>
		</div>
	</div>