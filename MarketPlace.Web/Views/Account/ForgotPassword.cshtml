@model MarketPlace.DataLayer.DTOs.Account.ForgotPasswordDTO
@{
    ViewData["Title"] = "بازیابی رمز عبور";
}
@section scripts{
	<partial name="_ValidationScriptsPartial"/>
	<partial name="_CaptchaScripts"/>
}
<div class="breadcrumbs_area">
		<div class="container">
			<div class="row">
				<div class="col-12">
					<div class="breadcrumb_content">
						<ul>
							<li><a href="/">خانه</a></li>
							<li>@ViewData["Title"]</li>
						</ul>
					</div>
				</div>
			</div>
		</div>
	</div>

	<div class="customer_login mt-60">
		<div class="container">
			<div class="row">
				<!--login area start-->
				<div class="col-lg-6 col-md-6 offset-lg-3 offset-md-3">
					<div class="account_form">
						<h2>@ViewData["Title"]</h2>
						<form asp-controller="Account" asp-action="ForgotPassword" method="post">
							<partial name="_CaptchaInput"/>
							<p>
								<label>ایمیل <span>*</span></label>
								<input type="text" asp-for="Email">
								<span asp-validation-for="Email" class="text-danger"></span>
							</p>
							<div class="login_submit">
								<button type="submit">بازیابی</button>
							</div>

						</form>
					</div>
				</div>
				<!--login area start-->
			</div>
		</div>
	</div>
