@model MarketPlace.DataLayer.DTOs.Account.LoginUserDTO
@{
    ViewData["Title"] = "ورود";
	var url = ViewBag.returnUrl as string;
}
@section scripts{
	<partial name="_ValidationScriptsPartial"/>
	<partial name="_CaptchaScripts"/>
}
<div class="breadcrumbs_area">
		<div class="container">
			<div class="row">
				<div class="col-12">
					<div class="breadcrumb_content">
						<ul>
							<li><a href="/">خانه</a></li>
							<li>@ViewData["Title"]</li>
						</ul>
					</div>
				</div>
			</div>
		</div>
	</div>

	<div class="customer_login mt-60">
		<div class="container">
			<div class="row">
				<!--login area start-->
				<div class="col-lg-6 col-md-6 offset-lg-3 offset-md-3">
					<div class="account_form">
						<h2>@ViewData["Title"]</h2>
						<form asp-controller="Account" asp-action="Login" asp-route-returnurl=@url method="post">
							<partial name="_CaptchaInput"/>
							<p>
								<label>ایمیل <span>*</span></label>
								<input type="text" asp-for="Email">
								<span asp-validation-for="Email" class="text-danger"></span>
							</p>
							<p>
								<label>رمز عبور <span>*</span></label>
								<input type="password" asp-for="Password">
								<span asp-validation-for="Password" class="text-danger"></span>
							</p>
							<div class="login_submit">
								<a asp-controller="Account" asp-action="ForgotPassword">رمز عبور خود را فراموش کرده اید؟</a>
								<label for="remember">
									<input id="remember" type="checkbox" asp-for="RememberMe"> به خاطر سپاری
								</label>
								<button type="submit">ورود</button>

							</div>

						</form>
					</div>
				</div>
				<!--login area start-->
			</div>
		</div>
	</div>